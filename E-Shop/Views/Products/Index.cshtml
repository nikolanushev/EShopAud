@model List<E_Shop.Domain.Domain_Models.Product>

@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">New product</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="card" style="width: 20rem; margin:10px;">
                <img class="card-img-top" src="@item.ProductImage" alt="Card image cap" style="height:90%; width:100%">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="card-text">@item.ProductDesrciption</p>
                    <a href="/Products/AddToCart?productId=@item.Id&CartId=1" class="btn btn-info">Add to card</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
