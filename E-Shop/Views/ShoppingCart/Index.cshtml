@model E_Shop.Domain.Dto.ShoppingCartDto

<h1>Shopping Cart</h1>

@if (Model.ProductsInShoppingCart.Count == 0)
{
    <h5>No products in the shopping cart</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th class="col-md-1">#</th>
                <th class="col">Product</th>
                <th class="col">Quantity</th>
                <th class="col">Price</th>
                <th class="col"></th>
            </tr>
        </thead>

        <tbody>
            @{
                var i = 1;
                foreach (var item in Model.ProductsInShoppingCart)
                {
                    <tr>
                        <td>@( i++)</td>
                        <td>@item.Products.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Products.ProductPrice</td>
                        <td>
                            <a class="btn btn-danger" href="/ShoppingCart/DeleteFromShoppingCart/@item.Products.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

        <tfoot>
            <tr>
                <th>Total: </th>
                <th></th>
                <th></th>
                <th></th>
                <th>@Model.TotalPrice</th>
            </tr>
        </tfoot>
    </table>

    <div class="row">
        <div class="form-group">
            <a href="/ShoppingCart/OrderNow" class="btn btn-warning">Order</a>
        </div>
    </div>
}